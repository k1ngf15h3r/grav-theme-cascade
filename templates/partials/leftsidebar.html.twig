{% include 'partials/core/doctype.html.twig' %}

{% include 'partials/core/header.html.twig' %}
<div class="col">
    <div class="cell">
        <div class="col">
            <div class="cell">
                <div class="page-header">
                                    <h1>{{ header.title }}<small>&nbsp;&nbsp;put breadcrumbs here</small></h1>
                </div>
            </div>
        </div>
        <div class="col width-1of5">
            <div class="cell menu">
                <span class="tiny">Sub-Menu</span>
                <ul class="left nav links">
                  {% for page in pages.children %}
                  {% if page.visible %}
                  {% set current_page = (page.active or page.activeChild) ? 'active' : '' %}
                  <li class="{{ current_page }}"><a href="{{ page.url }}">{{ page.menu }}</a></li>
                  {% endif %}
                  {% endfor %}
                </ul>
            </div>
        </div>
        <div class="col width-fill">
            <div class="col">
                <div class="cell">
                    <h2>{{ header.title }}</h2>
                    <p>put breadcrumbs or pagination here</p>
                </div>
            </div>
            <div class="col">
                <div class="cell panel">
                    <div class="body">
                        <div class="cell">
                            <div class="col">
                                <div class="cell">
              {% block content %}{% endblock %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
      </div>
{% include 'partials/core/footer.html.twig' %}
