<!DOCTYPE html>
<html lang="en">
    <head>
        {% block head %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% if header.description %}
        <meta name="description" content="{{ header.description }}">
        {% else %}
        <meta name="description" content="{{ site.description }}">
        {% endif %}
        {% if header.robots %}
        <meta name="robots" content="{{ header.robots }}">
        {% endif %}
        <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicon.ico">

        <title>{% if header.title %}{{ header.title }} | {% endif %}{{ site.title }}</title>

        {% block stylesheets %}
            {# Cascade core CSS #}
            {% do assets.add('theme://assets/css/cascade/production/build-full.min.css',101) %}

        {# CSS cascade custom #}
            {% do assets.add('theme://assets/css/site.css',100) %}
            {% do assets.add('theme://assets/css/cascade.css',100) %}

            {{ assets.css() }}
        {% endblock %}

        {% block javascripts %}
            {% do assets.add('theme://assets/js/module/jquery/jquery-2.1.1.min.js', 101) %}
            {% do assets.add('theme://assets/js/app.js') %}
            {% do assets.add('theme://assets/js/site/base.js') %}

            {% if browser.getBrowser == 'msie' and browser.getVersion >= 8 and browser.getVersion <= 9 %}
                {% do assets.add('theme://assets/js/shim/iehtmlshiv.js') %}
            {% endif %}

            {{ assets.js() }}
        {% endblock %}
        <style type="text/css">
            a:hover {
                text-decoration: none;
            }

            a:hover .body {
                background: #f7f7f9;
            }

            .nuremberg {
                background-size:100%;
                background-repeat: no-repeat;
                border-width: 1px;
            }

            .nuremberg img {
                visibility:hidden;
            }

            #link1 {
                background-image:url('assets/img/templates/centered-content.png');
                filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='assets/img/templates/centered-content.png',sizingMethod='scale');
            }

            #link2 {
                background-image:url('assets/img/templates/centered-page.png');
                filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='assets/img/templates/centered-page.png',sizingMethod='scale');
            }

            #link3 {
                background-image:url('assets/img/templates/centered-panel+header.png');
                filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='assets/img/templates/centered-panel+header.png',sizingMethod='scale');
            }

            #link4 {
                background-image:url('assets/img/templates/fixed-header+centered-content.png');
                filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='assets/img/templates/fixed-header+centered-content.png',sizingMethod='scale');
            }

            #link5 {
                background-image:url('assets/img/templates/fixed-header+centered-panel.png');
                filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='assets/img/templates/fixed-header+centered-panel.png',sizingMethod='scale');
            }

            #link6 {
                background-image:url('assets/img/templates/fixed-header+fixed-footer+centered-content.png');
                filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='assets/img/templates/fixed-header+fixed-footer+centered-content.png',sizingMethod='scale');
            }
        </style>
        {% endblock head %}
      </head>
